alias _dc='docker run -v /var/run/docker.sock:/var/run/docker.sock -v /usr/bin/docker:/usr/bin/docker -v "$PWD:$PWD" -w "$PWD" -e DOTFILES_REPOSITORY=$DOTFILES_REPOSITORY -e HOME=$HOME $EXTRA_ARGS ghcr.io/eigenmannmartin/df-toolkit:main'
alias dcup='_dc dcup'
alias dcdown='_dc dcdown'
alias dcupclean='_dc dcup --remove-existing-container'
alias dcshell='EXTRA_ARGS="-it" _dc dcshell'

alias cat="batcat"
alias dive="docker run -ti --rm  -v /var/run/docker.sock:/var/run/docker.sock wagoodman/dive"
alias vim="nvim"
if command -v exa >/dev/null; then
  alias ls='exa --icons -F -H --group-directories-first --git -1'
fi

FILE=~/.alias.local && test -f $FILE && source $FILE
